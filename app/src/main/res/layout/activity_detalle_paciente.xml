<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d5a80">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_l">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detallePacienteText"
                android:textColor="#edf8f9"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_l"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombreText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apellidoText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dniText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefonoText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nivelEducativoText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cursoGradoText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fechaNacimientoText"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_s"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/motivoConsulta"
                android:textColor="#edf8f9"/>
            <TextView
                android:id="@+id/tvMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#edf8f9"
                android:paddingBottom="@dimen/margin_m"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/btnEditar"
                    android:layout_width="@dimen/detail_buttons_icon_size"
                    android:layout_height="@dimen/detail_buttons_icon_size"
                    android:src="@drawable/editar"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/editarDescripcion"
                    app:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="@dimen/margin_s"/>

                <ImageButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="@dimen/detail_buttons_icon_size"
                    android:layout_height="@dimen/detail_buttons_icon_size"
                    android:src="@drawable/eliminar"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/eliminarDescripcion"
                    app:tint="#FFFFFF"
                    android:scaleType="centerInside"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_space_detail"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="@dimen/margin_l"
        android:paddingBottom="@dimen/margin_xl">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabAtras"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/atrasBtnText"
            android:textAllCaps="false"
            android:backgroundTint="#3d5a80"
            android:textColor="#98c1d9"
            app:rippleColor="#98c1d9"
            app:strokeColor="#98c1d9"
            app:strokeWidth="@dimen/button_stroke"
            app:cornerRadius="@dimen/button_radius"
            android:layout_marginEnd="@dimen/margin_m"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabHistorial"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/verHistorialBtnText"
            android:textAllCaps="false"
            android:backgroundTint="#3d5a80"
            android:textColor="#98c1d9"
            app:rippleColor="#98c1d9"
            app:strokeColor="#98c1d9"
            app:strokeWidth="@dimen/button_stroke"
            app:cornerRadius="@dimen/button_radius"/>
    </LinearLayout>

</FrameLayout>
