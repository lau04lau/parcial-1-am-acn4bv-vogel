<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8eef6"
    tools:context=".DetalleHistorialActivity">

    <ScrollView
        android:id="@+id/scrollDetalleHistorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/contenedorBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dhPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3d5a80"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/dhFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3d5a80"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/dhTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3d5a80"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/dhDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3d5a80"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/dhEditar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:src="@drawable/editardoc"
            android:contentDescription="@string/editarDescripcion"
            app:tint="#3d5a80"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:layout_marginHorizontal="12dp" />

        <ImageButton
            android:id="@+id/dhEliminar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:src="@drawable/eliminardoc"
            android:contentDescription="@string/eliminarDescripcion"
            app:tint="#3d5a80"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:layout_marginHorizontal="12dp" />

        <ImageButton
            android:id="@+id/dhVolver"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:src="@drawable/atras"
            android:contentDescription="@string/volverDescripcion"
            app:tint="#3d5a80"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:layout_marginHorizontal="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
